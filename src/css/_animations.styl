/*
  Possible Animations:
  enter
  leave
  appear Must set transitionAppear={true} on animation component
*/

.order-enter
	background red
	transition all 0.5s
	transform translateX(-120%) /*it starts from -120% of its x position*/
	max-height 0 /* order item "expands" */
	padding 0 !important
	&.order-enter-active
		background yellow
		max-height 60px
		padding 2rem 0 !important
		transform translateX(0) /* ends at 0, ending point */


.order-leave
	transition all 0.5s
	max-height 60px
	padding 2rem 0 !important
	transform translateX(0)
	&.order-leave-active
		max-height 0
		padding 0 !important
		transform translateX(120%)


.count-enter
	transition all 0.5s
	transform translateY(100%)
	&.count-enter-active
		transform translateY(0)


.count-leave
	transition all 0.5s
	position absolute
	left 0
	bottom 0
	transform translateY(0%)
	&.count-leave-active
		transform translateY(-100%)
